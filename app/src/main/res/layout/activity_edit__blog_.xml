<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit__blog_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/back"
    tools:context="com.example.dontknow.acses.Edit_Blog_Activity">

    <ImageButton
        android:layout_height="150dp"
        android:background="@mipmap/ic_add_a_photo_black_48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/ideditpostimage"
        android:layout_width="200dp"
        android:layout_marginTop="25dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Post Title..........."
        android:ems="10"
        android:layout_below="@+id/ideditpostimage"
        android:layout_marginTop="25dp"
        android:id="@+id/ideditposttitle"
        android:layout_alignParentStart="true"
        android:padding="15dp"
        android:paddingTop="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:elevation="1dp"
        android:background="@drawable/postdraw"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@id/ideditposttitle"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/ideditpostdescription"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="15dp"
        android:background="@drawable/postdraw"
        android:text="Post Description........."
        />

    <Button
        android:text="Confirm post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/ideditpostbtn"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="0dp"
        android:padding="15dp"
        android:paddingLeft="15dp"
        android:textColor="#ffffff"
        android:paddingRight="15dp"
        android:background="@drawable/postbtn"/>


</RelativeLayout>
