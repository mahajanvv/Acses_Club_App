<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/ba"
    tools:context="com.example.dontknow.acses.EditEventActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Event Type:Event / Club Service"
        android:ems="10"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/idediteventtype"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/input_bk"
        android:focusable="false"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Event Topic"
        android:ems="10"
        android:padding="10dp"
        android:layout_below="@+id/idediteventtype"
        android:layout_marginTop="10dp"
        android:id="@+id/idediteventtopic"
        android:layout_alignParentStart="true"
        android:background="@drawable/input_bk"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:hint="Event Description"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:layout_below="@+id/idediteventtopic"
        android:ems="10"
        android:background="@drawable/input_bk"
        android:id="@+id/idediteventDescription" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:padding="10dp"
        android:layout_below="@+id/idediteventDescription"
        android:layout_marginTop="10dp"
        android:id="@+id/idediteventdate"
        android:hint="Date"
        android:background="@drawable/input_bk"
        android:focusable="false"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:padding="10dp"
        android:layout_below="@+id/idediteventdate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Time"
        android:background="@drawable/input_bk"
        android:focusable="false"
        android:id="@+id/idediteventtime" />

    <Button
        android:text="Confirm Edit"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/idediteventpublish"
        android:background="@drawable/btn_bk"/>

    <Button
        android:text="back"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:id="@+id/idediteventback"

        android:background="@drawable/btn_bk"/>

</RelativeLayout>
