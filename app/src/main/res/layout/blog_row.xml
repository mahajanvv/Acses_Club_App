<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/exe"
        >

        <ImageView
            android:layout_width="260dp"
            android:layout_height="150dp"
            android:id="@+id/idpost_Image"
            android:background="@mipmap/ic_add_a_photo_black_48dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="50dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idpost_title"
            android:text="Post Title"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_margin="8dp"

            />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/idpost_description"
                    android:text="post description!!!!!!!"
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    />

        <TextView
            android:text="UserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:textStyle="bold"
            android:textSize="13dp"
            android:id="@+id/idpost_userName"
            android:layout_marginRight="5dp"
            android:layout_margin="4dp"/>

        <TextView
            android:text="PostDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textStyle="normal"
            android:textAlignment="viewEnd"
            android:id="@+id/idpost_Date"
            android:layout_marginRight="5dp"
            android:layout_margin="4dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>