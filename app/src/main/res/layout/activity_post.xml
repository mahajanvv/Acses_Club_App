<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/greybk"
    tools:context="com.example.dontknow.acses.PostActivity">

    <ImageButton
        android:layout_height="150dp"
        android:background="@mipmap/ic_add_a_photo_black_48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/idimage"
        android:layout_width="200dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Post Title..........."
        android:ems="10"
        android:layout_below="@+id/idimage"
        android:layout_marginTop="30dp"
        android:id="@+id/idposttitle"
        android:layout_alignParentStart="true"
        android:padding="15dp"
        android:paddingTop="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:elevation="1dp"
        android:background="@drawable/postdraw"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/idposttitle"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/idpostdescription"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="15dp"
        android:background="@drawable/postdraw"
        android:text="Post Description........."
        />

    <Button
        android:text="submit post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/idpost"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="0dp"
        android:padding="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/postbtn"/>

</RelativeLayout>
