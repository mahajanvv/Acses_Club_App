<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_memberprofile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backer"
    tools:context="com.example.dontknow.acses.memberprofile">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/idfname"
        android:hint="First Name"
        android:padding="15dp"
        android:background="@drawable/input_bk"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/idfname"
        android:layout_alignStart="@+id/idfname"
        android:layout_marginTop="20dp"
        android:id="@+id/idlname"
        android:hint="Last Name"
        android:padding="15dp"
        android:background="@drawable/input_bk"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/idlname"
        android:layout_alignStart="@+id/idlname"
        android:layout_marginTop="20dp"
        android:id="@+id/idmemberemail"
        android:padding="15dp"
        android:hint="Email Address"
        android:background="@drawable/input_bk"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_below="@+id/idmemberemail"
        android:layout_alignEnd="@+id/idmemberemail"
        android:layout_marginTop="20dp"
        android:id="@+id/idphone"
        android:padding="15dp"
        android:hint="Phone Number"
        android:background="@drawable/input_bk"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/idphone"
        android:layout_alignEnd="@+id/idphone"
        android:layout_marginTop="20dp"
        android:id="@+id/idmemberpost"
        android:padding="15dp"
        android:hint="Post In Club"
        android:background="@drawable/input_bk"/>

    <Button
        android:text="submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idmemberpost"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:id="@+id/idsubmit"
        android:padding="15dp"
        android:textColor="#ffffff"
        android:background="@drawable/postbtn"/>

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/idsubmit"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:id="@+id/idcancel"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:textColor="#ffffff"
        android:background="@drawable/postbtn"/>
</RelativeLayout>
